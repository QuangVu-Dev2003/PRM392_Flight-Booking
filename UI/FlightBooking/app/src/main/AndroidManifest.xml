<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FlightBooking"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".ChangePassword"
            android:exported="false" />
        <!-- 1. LAUNCHER ACTIVITY - Điểm khởi đầu của ứng dụng -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- 2. AUTHENTICATION ACTIVITIES - Xác thực người dùng -->
        <activity
            android:name=".Login"
            android:exported="false"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".Signup"
            android:exported="false"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".ResetPasswordActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize|stateHidden" /> <!-- 3. MAIN MENU ACTIVITY - Màn hình menu chính sau khi đăng nhập -->
        <activity
            android:name=".MainMenuActivity"
            android:exported="false" /> <!-- 4. PROFILE ACTIVITY - Quản lý thông tin cá nhân -->
        <activity
            android:name=".Profile"
            android:exported="false" />
        <activity
            android:name=".EditProfileActivity"
            android:exported="false" /> <!-- 5. FLIGHT BOOKING FLOW - Luồng đặt vé máy bay -->
        <activity
            android:name=".SearchFlightActivity"
            android:exported="false" />
        <activity
            android:name=".FlightResultsActivity"
            android:exported="false" />
        <activity
            android:name=".BookingActivity"
            android:exported="false" />
        <activity
            android:name=".ChooseSeatsActivity"
            android:exported="false" />
        <activity
            android:name=".BookingFormActivity"
            android:exported="false" /> <!-- 6. BOOKING HISTORY - Lịch sử đặt vé -->
        <activity
            android:name=".BookingHistoryActivity"
            android:exported="false" />
        <activity
            android:name=".BookingDetailActivity"
            android:exported="false" /> <!-- 7. PAYMENT -->
        <activity
            android:name=".TripActivity"
            android:exported="false" />
        <activity
            android:name=".PayActivity"
            android:exported="false" />
    </application>

</manifest>