<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFE0B2" /> <!-- Light orange background for selected -->
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="@color/travel_orange" /> <!-- Border -->
        </shape>
    </item>
    <!-- Unselected state (default) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F5F5F5" /> <!-- Light gray background for unselected -->
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="#E0E0E0" /> <!-- Subtle border -->
        </shape>
    </item>
</selector>
