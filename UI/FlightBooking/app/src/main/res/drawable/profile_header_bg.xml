<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sky gradient background -->
    <item>
        <shape>
            <gradient
                android:startColor="#1565C0"
                android:centerColor="#1976D2"
                android:endColor="#1E88E5"
                android:angle="135" />
        </shape>
    </item>

    <!-- Cloud-like overlay -->
    <item android:alpha="0.2">
        <shape>
            <gradient
                android:startColor="#64B5F6"
                android:centerColor="#90CAF9"
                android:endColor="#BBDEFB"
                android:angle="90" />
        </shape>
    </item>

    <!-- Travel elements scattered -->
    <item android:top="20dp" android:right="30dp" android:gravity="top|right">
        <rotate android:fromDegrees="15">
            <shape android:shape="rectangle">
                <solid android:color="#30FFFFFF" />
                <corners android:radius="4dp" />
                <size android:width="30dp" android:height="40dp" />
            </shape>
        </rotate>
    </item>

    <item android:top="80dp" android:left="40dp" android:gravity="top|left">
        <rotate android:fromDegrees="-20">
            <shape>
                <solid android:color="#40FFFFFF" />
                <size android:width="25dp" android:height="25dp" />
            </shape>
        </rotate>
    </item>

    <item android:bottom="60dp" android:right="50dp" android:gravity="bottom|right">
        <shape android:shape="oval">
            <solid android:color="#25FFFFFF" />
            <size android:width="20dp" android:height="20dp" />
        </shape>
    </item>

</layer-list>
