<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <!-- Back Button Row -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_back_circle"
                    android:src="@drawable/ic_arrow_back"
                    android:contentDescription="Back"
                    android:elevation="4dp"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="ðŸŒŸ AI Travel Planner"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Táº¡o lá»‹ch trÃ¬nh du lá»‹ch hoÃ n háº£o vá»›i AI"
                android:textSize="16sp"
                android:textColor="#7F8C8D"
                android:gravity="center" />

        </LinearLayout>

        <!-- Input Form Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:elevation="8dp"
            android:backgroundTint="#FFFFFF"
            android:radius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp">

                <!-- Destination Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="ðŸ“ Äiá»ƒm Ä‘áº¿n (VD: HÃ  Ná»™i)"
                    app:hintTextColor="#7F8C8D"
                    app:boxStrokeColor="#3498DB"
                    app:boxStrokeWidth="2dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    xmlns:app="http://schemas.android.com/apk/res-auto">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDestination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:textColor="#2C3E50"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Duration Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="ðŸ“… Sá»‘ ngÃ y (VD: 3)"
                    app:hintTextColor="#7F8C8D"
                    app:boxStrokeColor="#3498DB"
                    app:boxStrokeWidth="2dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    xmlns:app="http://schemas.android.com/apk/res-auto">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textSize="16sp"
                        android:textColor="#2C3E50"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Interests Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="28dp"
                    android:hint="â¤ï¸ Sá»Ÿ thÃ­ch (TÃ¹y chá»n)"
                    app:hintTextColor="#7F8C8D"
                    app:boxStrokeColor="#3498DB"
                    app:boxStrokeWidth="2dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    xmlns:app="http://schemas.android.com/apk/res-auto">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etInterests"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:textColor="#2C3E50"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Generate Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGeneratePlan"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="âœ¨ Táº¡o Lá»‹ch TrÃ¬nh"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#3498DB"
                    android:elevation="6dp"
                    android:stateListAnimator="@null"
                    app:cornerRadius="16dp"
                    app:rippleColor="#FFFFFF"
                    xmlns:app="http://schemas.android.com/apk/res-auto" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:indeterminateTint="#3498DB" />

        <!-- Result Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="6dp"
            android:backgroundTint="#FFFFFF"
            android:radius="16dp">

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2C3E50"
                android:textSize="15sp"
                android:lineSpacingExtra="4dp"
                android:padding="20dp" />

        </androidx.cardview.widget.CardView>

        <!-- Error Message -->
        <TextView
            android:id="@+id/tvError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#E74C3C"
            android:textSize="14sp"
            android:visibility="gone"
            android:background="#FADDD8"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:drawableStart="@android:drawable/ic_dialog_alert"
            android:drawablePadding="8dp"
            android:gravity="center_vertical" />

    </LinearLayout>
</ScrollView>